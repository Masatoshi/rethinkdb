#!/usr/bin/env python

import os, sys, subprocess
sys.path.insert(0, os.path.join(os.path.dirname(os.path.realpath(__file__)), os.pardir, os.pardir, "common"))
import utils

if not os.path.isdir('run'):
    os.makedirs('run')

os.environ['BUILD_DIR'] = os.getenv('BUILD_DIR') or utils.latest_build_dir()
sys.exit(subprocess.call(['_mocha', os.path.join(os.path.dirname(__file__), 'connection.js')]))
